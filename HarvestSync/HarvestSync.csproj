rmdir /s /q "%25RIM_DIR%25\Mods\%25ModName%25"
)
@echo Deploy $(ProjectDir) Distribution files to test env:  %25RIM_DIR%25\Mods...
xcopy /E /Y "$(ProjectDir)Distribution\*" "%25RIM_DIR%25\Mods"


